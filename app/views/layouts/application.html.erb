<!DOCTYPE html>
<html>
  <head>
    <title>VancouverNow!</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyDudjMFzpaSrkiRiiAELVX3j82SpmQGiM4"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

  </head>

  <body>
    <nav class="navbar navbar-sticky-top navbar-expand-md navbar-dark bg-dark">
          <%= link_to 'Vancouver 𝓝ow!', root_path, class: "nav-link" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          MENU <span class="navbar-toggler-icon"></span>
        </button>

      <div class="collapse navbar-collapse navbar-fixed-top" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
           <%= link_to 'Events', events_path, class: "nav-link" %><span class="sr-only">(current)</span>

          </li>
          <li class="nav-item">
            <%#= link_to 'New Event', new_event_path, class: "nav-link"   %>
          </li>
          <li class="nav-item">
            <%= link_to 'Nearby Events', nearby_events_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%#= link_to 'Discount', new_discount_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Companies', discounts_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <% if user_signed_in? %>
              Hello, <%= current_user.full_name %>
            </li>
            <li class="nav-item">
              <% if current_user.is_admin? %>
                <%= link_to 'Dashboard', admin_dashboard_index_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', sessions_path, method: :delete, class: "nav-link" %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_session_path, class: "nav-link" %>
            </li>
              <li class="nav-item">
              <%= link_to "Sign Up", new_user_path, class: "nav-link" %>
              <% end %>
            </li>
        </ul>
      </div>
    </nav>










    <main class="container-fluid">
        <%# ALERTS %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success alert-dismissable fade-show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert].present? %>
          <div class="alert alert-danger alert-dismissable fade-show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[:alert] %>
          </div>
        <% end %>

      <%= yield %>
    </main>

    <footer class="footer">
      <div class="container">
        <div class='row'>

        </div>
      </div>
    </footer>

  </body>
</html>
