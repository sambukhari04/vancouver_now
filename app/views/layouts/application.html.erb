          MENU <span class="navbar-toggler-icon"></span>
        </button>

      <div class="collapse navbar-collapse navbar-fixed-top" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
           <%= link_to 'Events', events_path, class: "nav-link" %><span class="sr-only">(current)</span>

          </li>
          <li class="nav-item">
            <%= link_to 'Nearby Events', nearby_events_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to 'Companies', discounts_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <% if user_signed_in? %>
              Hello, <%= current_user.full_name %>
            </li>
            <li class="nav-item">
              <% if current_user.is_admin? %>
                <%= link_to 'Dashboard', admin_dashboard_index_path, class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', sessions_path, method: :delete, class: "nav-link" %>
            </li>
            <% else %>
            <li class="nav-item">
              <button
              type="button"
              class="btn btn-outline-secondary btn-sm"
              data-toggle="modal" data-target="#newSessionModal">Sign In</button>
                <%= render './modals/new_session_modal' %>
            </li>
            <li class="nav-item">
             <button
            type="button"
            class="btn btn-outline-secondary btn-sm ml-2"
            data-toggle="modal" data-target="#newUserModal">Sign Up</button>
              <%= render './modals/new_user_modal' %>
           </li>
            <% end %>


        </ul>
      </div>
    </nav>






